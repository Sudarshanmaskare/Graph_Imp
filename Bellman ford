#include<bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution {
public:
	int isNegativeWeightCycle(int N, vector<vector<int>>edges){
	    // Code her
      int dist[N]={INT_MAX};
      dist[0]=0;
      for(int i=0;i<N-1;i++){
          for(auto e:edges){
              int v=e[0],w=e[1],x=e[2];
              if(dist[v]!=INT_MAX && dist[w]>dist[v]+x){
                  dist[w]=dist[v]+x;
              }
          }
      }
        for(auto edge: edges)
        {
            int u = edge[0];
            int v = edge[1];
            int weight = edge[2];
            
            if(dist[u]!=INT_MAX && dist[v] > dist[u] + weight)
            {
                return true;
            }
        }
        
        return false;
 
    }
	
};

// { Driver Code Starts.
int main(){
	int tc;
	cin >> tc;
	while(tc--){
		int n, m;
		cin >> n >> m;
		vector<vector<int>>edges;
		for(int i = 0; i < m; i++){
			int x, y, z;
			cin >> x >> y >> z;
			edges.push_back({x,y,z});
		}
		Solution obj;
		int ans = obj.isNegativeWeightCycle(n, edges);
		cout << ans <<"\n";
	}
	return 0;
}  // } Driver Code Ends
