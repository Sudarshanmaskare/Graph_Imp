//Important observation __ Odd length cycle =>> Not Bapartite graph ,,,,,,Not odd length cycle ==>> Bapartite graph 

//BFS Traversal

// { Driver Code Starts
#include<bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution {
public:
	bool isBipartite(int V, vector<int>adj[]){
	    // Code here
	    vector<int> col(V,-1);
	    queue<pair<int,int>> q;
	    for(int i=0;i<V;i++){
	        if(col[i]==-1){
	            q.push({i,1});
	            col[i]=1;
	            while(!q.empty()){
	                auto temp=q.front();
	                q.pop();
	                int temp_col=temp.second;
	                int node=temp.first;
	                for(auto var:adj[node]){
	                    if(col[var]==temp_col) return false;
	                    if(col[var]==-1){
	                        col[var]=temp_col?0:1;
	                        q.push({var,col[var]});
	                    }
	                }
	            }
	        }
	    }
	    return true;
	    
	}

};

// { Driver Code Starts.
int main(){
	int tc;
	cin >> tc;
	while(tc--){
		int V, E;
		cin >> V >> E;
		vector<int>adj[V];
		for(int i = 0; i < E; i++){
			int u, v;
			cin >> u >> v;
			adj[u].push_back(v);
			adj[v].push_back(u);
		}
		Solution obj;
		bool ans = obj.isBipartite(V, adj);    
		if(ans)cout << "1\n";
		else cout << "0\n";  
	}
	return 0;
}  // } Driver Code Ends


//DFS Traversal

// { Driver Code Starts
#include<bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution {
public:
  bool dfs(vector<int> adj[],vector<int> &col,int v){
      if(col[v]==-1) col[v]=1;
      for(auto var:adj[v]){
          if(col[var]==-1){
              col[var]=col[v]?0:1;
              if(!dfs(adj,col,var)) return false;
              
          }
          else if(col[var]==col[v]) return false;
      }
      return true;
  }
	bool isBipartite(int V, vector<int>adj[]){
	    // Code here
	    vector<int> col(V,-1);
	    for(int i=0;i<V;i++){
	        if(col[i]==-1){
	            if(!dfs(adj,col,i)) return false;
	        }
	    }
	    return true;
	}

};

// { Driver Code Starts.
int main(){
	int tc;
	cin >> tc;
	while(tc--){
		int V, E;
		cin >> V >> E;
		vector<int>adj[V];
		for(int i = 0; i < E; i++){
			int u, v;
			cin >> u >> v;
			adj[u].push_back(v);
			adj[v].push_back(u);
		}
		Solution obj;
		bool ans = obj.isBipartite(V, adj);    
		if(ans)cout << "1\n";
		else cout << "0\n";  
	}
	return 0;
}  // } Driver Code Ends
